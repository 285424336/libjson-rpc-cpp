{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "windows": {
                "args": [
                    "-DCMAKE_TOOLCHAIN_FILE=C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
                    ".."
                ],
            },
            "args": [
                "-G", "Ninja"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build"
        },
        {
            "label": "ninja",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }, 
        {
            "label": "test",
            "type": "shell",
            "command": "ctest",
            "args": [
                "-V", "--timeout", "3", "."
            ],
            "options": {
                "cwd": "build"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
        }
    ]
}