{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "coverage",
            "type": "shell",
            "command": "ninja",
            "args": [
                "coverage"
            ],
            "options": {
                "cwd": "build"
            },
            "group": "build"
        },
        {
            "label": "create-build",
            "type": "shell",
            "osx": {
                "command": "mkdir",
                "args": [
                    "-p",
                    "build"
                ]
            },
            "linux": {
                "command": "mkdir",
                "args": [
                    "-p",
                    "build"
                ]
            },
            "windows": {
                "command": "mkdir",
                "args": [
                    "build"
                ]
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "windows": {
                "args": [
                    "-G", "Visual Studio 15 2017 Win64",
                    "-DCMAKE_TOOLCHAIN_FILE=C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
                    ".."
                ],
            },
            "osx": {
                "args": [
                    "-G", "Ninja",
                    "-DCOVERAGE=ON",
                    "-DCMAKE_TOOLCHAIN_FILE=/Users/cinemast/vcpkg/scripts/buildsystems/vcpkg.cmake",
                    ".."
                ]
            },
            "linux": {
                "args": [
                    "-DCOVERAGE=ON",
                    "-G", "Ninja",
                    ".."
                ]
            },
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "dependsOn": "create-build",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc", "$msCompile"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "ctest",
            "args": [
                "-V",
                "--timeout",
                "3",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}